<div class="row">
 <div class="col-md-12">
 <h2>Department<a href="/departments/add" class="btn btn-success pull-right">Add New Department</a></h2>
 <hr />
 <div class = "table-responsive">
     <table class="table ">
         <thead>
             <tr>
                 <th>Department&nbsp;Number</th>
                 <th>Department&nbsp;Name</th>
             </tr>
         </thead>
         <tbody>
             {{#each departments}}
             <tr>
                 <td><a href = "/employees?department={{departmentId}}">{{departmentId}}</a></td>
                 <td><a href = "/department/{{departmentId}}">{{departmentName}}</a></td>
             </tr>
             {{/each}}
         </tbody>
         {{#unless departments}}
         <strong>{{message}}</strong>
         {{/unless}}
     </table>

 </div>
 </div>
</div>